<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FF"
    tools:context=".JoinActivity">

    <ImageButton
        android:id="@+id/JoinBackBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="20dp"
        android:background="#F5F7FF"
        android:scaleType="centerInside"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Join_titleImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/moonlogo"
        app:layout_constraintBottom_toTopOf="@+id/Join_title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Join_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyeongchangpeacebold"
        android:text="JOIN"
        android:textColor="@color/blue_c74"
        android:textSize="45sp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/join_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Join_title_txt">

        <EditText
            android:id="@+id/Join_email"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:fontFamily="@font/scdream3"
            android:hint="  이메일 주소를 입력하세요."
            android:inputType="textEmailAddress"
            android:textColor="#555555"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/Join_password"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:fontFamily="@font/scdream3"
            android:hint="  비밀번호를 입력하세요."
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/Join_re_password"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:fontFamily="@font/scdream3"
            android:hint="  비밀번호를 재입력하세요."
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/JoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_corner_rectangle"
        android:fontFamily="@font/pyeongchangpeacebold"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>